#!/usr/bin/env bash


source $HYPRCORE_SCRIPTS/helper.sh


package="1password"

gum style \
    --foreground 212 \
    "Installing $package"

cd $HYPRCORE_CACHE
curl -sS https://downloads.1password.com/linux/keys/1password.asc | gpg --import

command="git clone https://aur.archlinux.org/1password.git"
execute_command "Clone 1password repository" "$command"

run_makepkg 1password